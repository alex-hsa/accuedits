

{% if not storybook %}
  {% if 'youtube' in video_remote %}
    {# YouTube requires to embed videos using this format: https://www.youtube.com/embed/v5YnNy_te08 #}
    {# However, Drupal doesn't allow the embed format. As a work-around we are converting the regular #}
    {# YouTube URL: https://www.youtube.com/watch?v=v5YnNy_te08 to the embed version #}
    {% set youtube_id =  video_remote|split('=',2)[1] %}
    {% set video_src = 'https://www.youtube.com/embed/' ~ youtube_id %}
  {% endif %}
{% endif %}



{% if storybook %}
  {% set video_src = video_src %}
{% else %}
  {% set video_src %}
    <div class="video-remote {{ classes }}">
      <iframe src="{{ video_src }}" allowfullscreen frameborder="0" class="w-full h-full"></iframe>
    </div>
  {% endset %}
{% endif %}


<figure{% if caption is defined %} role="group"{% endif %} class="">
  <div class="figure__media">{{ video_src }}</div>
  {% if caption is defined %}
    <figcaption class="figure__caption">{{ caption }}</figcaption>
  {% endif %}
</figure>