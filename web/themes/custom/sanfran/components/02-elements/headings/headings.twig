{% set classes = [
  'h' ~ level,
  'font-heading',
  classes,
]|join(' ')|trim %}


{% set heading_id = text['#context'].value|lower|replace({' ': '-'}) %}
{# {{dump(heading_id)}} #}
<h{{level}} id="{{heading_id}}" class="{{classes}}">
  {% if url %}
    {{ include('sanfran:link', {
        text: heading,
        url,
        })
    }}
  {% else %}{{ text }}{% endif %}
</h{{level}}>
