{% set classes = [
  'h' ~ level,
  'font-heading',
  classes,
]|join(' ')|trim %}

{% if storybook %}
  {% set heading_id = '1234' %}
{% else %}
  {% set heading_id = text['#context'].value|lower|replace({' ': '-'}) %}
{% endif %}

<h{{ level }} id="{{heading_id}}" class="{{classes}}">
  {% if url %}
    {{ include('sanfran:link', {
        text,
        url,
        })
    }}
  {% else %}{{ text }}{% endif %}
</h{{ level }}>
