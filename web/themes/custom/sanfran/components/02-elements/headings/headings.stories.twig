{% stories headings with { 
  title: 'AccuEdits/Elements/Headings'
} %}

  {% story headings_default with {
    name: 'Plain Header', 
    args: {
      heading: 'Plain Header',
      classes: 'text-2xl',
    }
  } %}

    {{ include('sanfran:headings', {
        level: '1',
        text: heading,
        })
    }}
  {% endstory %}


  {% story headings_with_link with {
    name: 'Header with link', 
    args: {
      heading: 'Header with link',
      classes: 'font-bold',
      url: 'https://www.google.com',
    }
  } %}

    {{ include('sanfran:headings', {
        level: '1',
        text: heading,
        url,
        })
    }}
  {% endstory %}
{% endstories %}
