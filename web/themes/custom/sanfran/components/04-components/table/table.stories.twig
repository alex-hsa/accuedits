{% stories table with { 
  title: 'AccuEdits/Components/Table',
  argTypes: {
    background_color: {
      options: ['primary', 'secondary', 'accent', 'neutral', 'base-100', 'base-200', 'error', 'info', 'success', 'warning'],
      control: 'select'
    },
    background_pattern: {
      options: ['public://2024-05/beige_droplets.svg', 'public://2024-05/beige_pattern.svg', 'public://2024-05/blue_droplets.svg', 'public://2024-05/blue_swirls.svg', 'public://2024-05/blue_waves.svg', 'public://2024-05/purple_pattern.svg'],
      control: 'select'
    },
    border: {
      options: ['no', 'yes'],
      control: 'radio'
    },
    flip: {
      options: ['no', 'yes'],
      control: 'radio'
    },
    orientation: {
      options: ['stacked', 'horizontal'],
      control: 'select'
    },
    placement: {
      options: ['start', 'middle', 'end'],
      control: 'select'
    },
  }
} %}

    {% story table_default with {
    name: 'Default',
      args: {
        background_color: 'accent',
        background_pattern: 'public://2024-05/blue_swirls.svg',
        border: 'no',
        flip: 'no',
        orientation: 'stacked',
        placement: 'start',
        lead_item: [
          {
            eyebrow: 'AccuEdits.com',
            heading: 'Web publishing, streamlined',
            level: '1',
            description: 'AccuEdits is quick, stylish, and gives your team all the tools they need to handle large amounts of content efficiently.',
            ctaText: 'Get Started',
            ctaHref: 'https://www.accuedits.com/getstarted',
            cta_title_secondary: 'Why AccuEdits',
            cta_url_secondary: 'https://www.accuedits.com/why',
            alignment: 'left',
            background_color: 'accent',
            background_glass: 'yes',
            width: 'w-6/12',
          }
        ],
        table: '<table style="border:1px solid hsl(0, 0%, 60%);"><thead><tr><th>Project name</th><th>Description</th><th><p class="text-align-right">Price</p></th></tr></thead><tbody><tr><td>Invoices</td><td>Add invoice confirmation</td><td><p class="text-align-right">$4,500</p></td></tr><tr><td>Templates</td><td>Refactor templates to use the new templating library</td><td><p class="text-align-right">$9,000</p></td></tr><tr><td>Payments</td><td>Process payments using third party API</td><td><p class="text-align-right">$5,500</p></td></tr><tr><td>Workflow</td><td>Improve account management workflow</td><td><p class="text-align-right">$6,000</p></td></tr><tr><td> </td><td><p class="text-align-right"><strong>Total: </strong></p></td><td><p class="text-align-right"><strong>$25,000</strong></p></td></tr></tbody></table>'
      }
  } %}

    {% set storybook_lead_item %}
      {% for item in lead_item %}
        
        {% if item.description %}
          {% set hmtl_text = {
            '#type':   'processed_text',
            '#text':    item.description,
            '#format':  'basic_html',
          } %}
        {% endif %}


        {{ include('sanfran:lead', {
            eyebrow: item.eyebrow,
            heading: item.heading,
            level: '1',
            description: hmtl_text,
            ctaText: item.ctaText,
            ctaHref: item.ctaHref,
            cta_title_secondary: item.cta_title_secondary,
            cta_url_secondary: item.cta_url_secondary,
            alignment: item.alignment,
            background_glass: item.background_glass,
            background_color: item.background_color,
            width: item.width,
        }) }}

      {% endfor %}
    {% endset %}


    {{ include('sanfran:table', {
        background_color,
        background_pattern,
        border,
        flip,
        orientation,
        placement,
        lead_item: storybook_lead_item,
        accordion_items,
        table,
        quick_edit: '',
        storybook: 'yes',
    }) }}

  {% endstory %}

{% endstories %}