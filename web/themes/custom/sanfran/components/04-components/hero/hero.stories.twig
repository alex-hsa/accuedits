{% stories hero with { 
  title: 'AccuEdits/Components/Hero'
} %}

  {% story hero_default with {
    name: '1. Default',
    args: {
      lead_item: [
        {
          eyebrow: 'AccuEdits.com',
          heading: 'Web publishing, streamlined',
          level: '1',
          description: 'AccuEdits is quick, stylish, and gives your team all the tools they need to handle large amounts of content efficiently.',
          ctaText: 'Get Started',
          ctaHref: 'https://www.accuedits.com/getstarted',
          cta_title_secondary: 'Why AccuEdits',
          cta_url_secondary: 'https://www.accuedits.com/why',
          alignment: 'left',
          background_color: 'accent',
          background_glass: 'yes',
          width: 'w-6/12',
        }
      ],
      image: 'public://2024-04/pexels-kampus-8204379.jpg', 
      image_alt: 'This is the Golden Gate Bridge',
      border: 'yes',
      placement: 'start',
    }
  } %}

    {% set storybook_lead_item %}
      {% for item in lead_item %}
        
        {% if item.description %}
          {% set hmtl_text = {
            '#type':   'processed_text',
            '#text':    item.description,
            '#format':  'basic_html',
          } %}
        {% endif %}


        {{ include('sanfran:lead', {
            eyebrow: item.eyebrow,
            heading: item.heading,
            level: '1',
            description: hmtl_text,
            ctaText: item.ctaText,
            ctaHref: item.ctaHref,
            cta_title_secondary: item.cta_title_secondary,
            cta_url_secondary: item.cta_url_secondary,
            alignment: item.alignment,
            background_glass: item.background_glass,
            background_color: item.background_color,
            width: item.width,
        }) }}

      {% endfor %}
    {% endset %}


    {{ include('sanfran:hero', {
        lead_item: storybook_lead_item,
        image,
        image_alt,
        border,
        placement,
        quick_edit: '',
        storybook: 'yes',
    }) }}
  {% endstory %}

  {% story hero_minimal_lead with {
    name: '2. Minimal Lead',
    args: {
      lead_item: [
        {
          eyebrow: '',
          heading: 'Web publishing, streamlined',
          level: '1',
          description: ' ',
          ctaText: '',
          ctaHref: '',
          cta_title_secondary: '',
          cta_url_secondary: '',
          alignment: 'left',
          background_color: '',
          background_glass: 'yes',
          width: 'w-6/12',
        }
      ],
      image: 'public://2024-04/pexels-kampus-8204379.jpg', 
      image_alt: 'This is the Golden Gate Bridge',
      border: 'no',
      placement: 'start',
    }
  } %}

  {% set storybook_lead_item %}
      {% for item in lead_item %}
        
        {% if item.description %}
          {% set hmtl_text = {
            '#type':   'processed_text',
            '#text':    item.description,
            '#format':  'basic_html',
          } %}
        {% endif %}


        {{ include('sanfran:lead', {
            eyebrow: item.eyebrow,
            heading: item.heading,
            level: '1',
            description: hmtl_text,
            ctaText: item.ctaText,
            ctaHref: item.ctaHref,
            cta_title_secondary: item.cta_title_secondary,
            cta_url_secondary: item.cta_url_secondary,
            alignment: item.alignment,
            background_glass: item.background_glass,
            background_color: item.background_color,
            width: item.width,
        }) }}

      {% endfor %}
    {% endset %}


    {{ include('sanfran:hero', {
        lead_item: storybook_lead_item,
        image,
        image_alt,
        border,
        placement,
        quick_edit: '',
        storybook: 'yes',
    }) }}
  {% endstory %}

{% endstories %}
