            ctaHref: 'https://www.drupalgeek.com',
          },
          {
            image: 'https://accuedits.ddev.site/sites/default/files/2024-03/pexels-golden-gate-bridge-sausalito.jpeg',
            image_alt: 'Alt text for the image goes here',
            heading: 'This Card Title',
            headingLevel: '2',
            description: 'If a dog chews shoes whose shoes does he choose?',
            ctaText: 'Read more',
            ctaHref: 'https://www.drupalgeek.com',
          },
        ],
      }
  }%}

    {% set storybook_lead_item %}
      {% for item in lead_item %}
        
        {% if item.description %}
          {% set hmtl_text = {
            '#type':   'processed_text',
            '#text':    item.description,
            '#format':  'basic_html',
          } %}
        {% endif %}


        {{ include('sanfran:lead', {
            eyebrow: item.eyebrow,
            heading: item.heading,
            level: '2',
            description: hmtl_text,
            ctaText: item.ctaText,
            ctaHref: item.ctaHref,
            cta_title_secondary: item.cta_title_secondary,
            cta_url_secondary: item.cta_url_secondary,
            alignment: item.alignment,
            background_glass: item.background_glass,
            background_color: item.background_color,
            width: item.width,
        }) }}

      {% endfor %}
    {% endset %}

    {{ include('sanfran:media-cards', {
        background_color,
        background_pattern,
        border,
        columns,
        placement,
        lead_item: storybook_lead_item,
        media_cards_items,
        quick_edit: '',
        storybook: 'yes',
    }) }}

  {% endstory %}

{% endstories %}