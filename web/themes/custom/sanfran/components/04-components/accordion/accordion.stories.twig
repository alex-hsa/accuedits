  title: 'AccuEdits/Components/Accordion',
  argTypes: {
    background_color: {
      options: ['Select...','primary', 'secondary', 'accent', 'neutral', 'base-100', 'base-200', 'error', 'info', 'success', 'warning'],
      control: 'select'
    },
