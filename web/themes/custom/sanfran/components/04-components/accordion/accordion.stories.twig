      control: 'select'
    },
    border: {
      options: ['no', 'yes'],
      control: 'radio'
    },
    flip: {
      options: ['no', 'yes'],
      control: 'radio'
    },
    orientation: {
      options: ['stacked', 'horizontal'],
      control: 'select'
    },
    placement: {
