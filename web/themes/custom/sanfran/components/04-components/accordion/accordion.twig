{% if alignment == 'center' %}
  {% set alignment_class = 'text-center' %}
{% elseif alignment == 'right' %}
  {% set alignment_class = 'text-right' %}
{% else  %}
  {% set alignment_class = 'text-left' %}
{% endif %}

{% if orientation == 'horizontal' %}
  {% set orientation_class = 'flex flex-row [&>div.lead]:mr-4 pr-4 [&>div:first-child]:absolute' %}
{% else %}
  {% set orientation_class = '[&>div.lead]:mb-4' %}
{% endif %}

{% if border == 'yes' %}
  {% set border_class = 'border rounded-lg' %}
{% else %}
  {% set border_class = '' %}
{% endif %}

{% if background_pattern %}
  {% set background_pattern_style = "background-image: url('" ~ background_pattern|file_url ~ "');" %}
{% endif %}

