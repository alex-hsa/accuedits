{% if border == 'yes' %}
  {% set border_class = 'border p-4 rounded-lg' %}
{% else %}
  {% set border_class = '' %}
{% endif %}

{% set paragraph_classes = [
    paragraph.bundle,
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    'bg-base-' ~ background_color,
  ]|join(' ')|trim %}


  <section {{ attributes.addClass(paragraph_classes).addClass(border_class).addClass('flex flex-row p-4 rounded-lg') }}>

    {{ quick_edit }}
    <div class="lead p-4 pr-8 text-center my-auto w-5/12">
      {{ include('sanfran:headings', {
          level,
          text: heading,
          classes: 'mb-0',
        })
      }}
    </div>

    <div class="items border-{{background_color}}-700 border-s-2 border-r-0 border-y-0 border-dashed col-span-2 p-4 pl-8 place-content-center w-7/12">
        {{ include('sanfran:wysiwyg', {
            wysiwyg: description,
            classes: 'my-auto [&>p]:mb-0',
          })
        }}
    </div>
  </section>
