      background_color: 'accent',
      background_pattern: 'public://2024-05/blue_swirls.svg',
      border: 'no',
      flip: 'no',
      image: '',
      image_alt: '',
      video_remote: 'https://www.youtube.com/embed/IPR36uraNwc',
      lead_item: [
